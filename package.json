{
  "name": "gyrejs",
  "version": "0.6.4",
  "description": "Uni-directional data flow library",
  "main": "lib/main.js",
  "types": "types/index.d.ts",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^23.3.12",
    "clean-webpack-plugin": "^1.0.0",
    "coveralls": "^3.0.2",
    "jest": "^23.6.0",
    "merge": ">=1.2.1",
    "npm-run-all": "^4.1.2",
    "randomatic": ">=3.0.0",
    "ts-jest": "^23.10.5",
    "ts-loader": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.8.0",
    "typedoc": "^0.14.1",
    "typedoc-webpack-plugin": "^1.1.4",
    "typescript": "^2.8.1",
    "uglifyjs-webpack-plugin": "^1.2.4",
    "url-parse": ">=1.4.3",
    "watch": "^1.0.2",
    "webpack": "^4.3.0",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": ">=3.1.11",
    "webpack-merge": "^4.1.2"
  },
  "scripts": {
    "start": "webpack-dev-server --open --config webpack.dev.js",
    "test": "jest --coverage",
    "lint": "npm run lint-ci --force",
    "lint-ci": "tslint --project .",
    "build": "webpack --config webpack.dev.js",
    "build-prod": "webpack --config webpack.prod.js",
    "dev": "npm-run-all test start",
    "watch": "watch 'npm run build-prod' ./src/",
    "preversion": "npm run lint-ci && npm run test && npm run build && npm run build-prod",
    "postversion": "git push --tags"
  },
  "author": "Wilbert van de Ridder",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/WRidder/GyreJS.git"
  },
  "jest": {
    "testURL": "http://localhost/",
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/tests/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/coverage",
    "coverageReporters": [
      "html",
      "lcov"
    ]
  }
}
